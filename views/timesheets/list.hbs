{{#extend "scripts"}}
<script src="/js/list.js"></script>
{{/extend}}

{{#each messages}}
<div class="alert alert-dismissible alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}

<div class="page-header">
    <h1>Bejelentett munkáim</h1>
</div>

<table class="table table-striped table-hover" id="errorTable">
    <thead>
        <tr>
            <th>Érkezési idő</th>
            <th>Státusz</th>
            <th>Helyszín</th>
            <th>Leírás</th>
            <th>Távozási idő</th>
        
        </tr>   
    </thead>
    <tbody>
        {{#each timesheets}}
        <tr>
            
            <td>{{date_in}}</td>
            <td><span class="label label-{{statusClass}}">{{statusText}}</span></td>
            <td>{{location}}</td>
            <td><span class="badge">{{numberOfMessages}}</span> {{description}}</td>
            <td>{{date_out}}</td>
            <td><form method="post" action ="/timesheets/modify"><input type="hidden" name="id" value="{{id}}"><button type="submit" class="btn btn-primary">Módosítás</button></form></td>
            <td><form method="post" action ="/timesheets/delete"><input type="hidden" name="id" value="{{id}}"><button type="submit" class="btn btn-primary">Törlés</button></form></td>
            
        </tr>
        {{/each}}
    </tbody>
</table>

<p><a href="/timesheets/new" class="btn btn-default">Új munka felvitele</a></p>
